.my-ui-item {
    display: block;
    padding: 24rpx 0 20rpx;
    text-align: center;
}

.select-my-ui{
    display: block;
    padding: 24rpx 0 20rpx;
    text-align: center;
    background-color: rgb(170, 166, 166,0.15);
}

.my-ui-item image {
    width: 80rpx;
    height: 80rpx;
    margin: auto auto 20rpx;
    display: block;
}

.my-ui-item text {
    color: #333;
    font-weight: 300;
}

.index-header{
    height: 30vh;
    width: 100%;
    background-image: url("https://cdn.jsdelivr.net/gh/Rewriterl/warm-heart@master/assets/bg.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}
